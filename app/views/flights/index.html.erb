<p id="notice"><%= notice %></p>


<h1>Welcome to Spreedly Air</h1>
<br />
<h2>Available Flights</h2>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.price %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= link_to 'Show', flight %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>
